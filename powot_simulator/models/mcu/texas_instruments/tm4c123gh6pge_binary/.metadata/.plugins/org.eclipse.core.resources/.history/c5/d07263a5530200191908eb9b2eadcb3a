#include "aux.h"

unsigned long atohex(const char *hex_str){
	char *ptr;
	int field_counter = 0;
	int hex_len;
	int i;
	int lsb_to_msb = 0;
	uint32_t result = 0;
	const char *hex_str_local = hex_str;

	ptr = strtok((char *)hex_str_local, "x");

	while (ptr != NULL){
		if(field_counter == 1){
			hex_len = strlen(ptr);
			for(i = hex_len - 1; i >= 0; i--){
				result += (hex_to_decimal(&ptr[i]) * (pow(16, lsb_to_msb)));
				lsb_to_msb++;
			}
		}
		field_counter++;
		ptr = strtok (NULL, "x");
	}

	return result;
}

uint8_t hex_to_decimal(char *digit){
	uint8_t dec_digit;

	if(*digit >= 0x30 && *digit <= 0x39){
		dec_digit = digit[0] - 0x30;
	}
	else if(*digit >= 'a' && *digit <= 'f'){
		switch(*digit){
		case 'a':
			dec_digit = 10;
			break;
		case 'b':
			dec_digit = 11;
			break;
		case 'c':
			dec_digit = 12;
			break;
		case 'd':
			dec_digit = 13;
			break;
		case 'e':
			dec_digit = 14;
			break;
		case 'f':
			dec_digit = 15;
			break;
		}
	}
	else if(*digit >= 'A' && *digit <= 'F'){
		switch(*digit){
		case 'A':
			dec_digit = 10;
			break;
		case 'B':
			dec_digit = 11;
			break;
		case 'C':
			dec_digit = 12;
			break;
		case 'D':
			dec_digit = 13;
			break;
		case 'E':
			dec_digit = 14;
			break;
		case 'F':
			dec_digit = 15;
			break;
		}
	}
	else{
		dec_digit = 0;
	}

	return dec_digit;
}

